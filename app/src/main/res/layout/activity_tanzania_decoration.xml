<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TanzaniaDecorationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/events_logo"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DECORATION DELIVERY"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TENTS"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHAIRS"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FLOWERS"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE TOILETS"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/btnViewAllTzDeco"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#3D5AFE"
            android:text="View All EVENTS"
            android:layout_marginTop="40dp"/>

        <Button
            android:id="@+id/btnAddInfoTzDeco"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#3D5AFE"
            android:text="Add New EVENT" />


    </LinearLayout>



</LinearLayout>