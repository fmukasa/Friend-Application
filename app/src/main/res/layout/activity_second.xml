<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/events_bg"
    tools:context=".SecondActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/events_logo" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Choose from Category"
            android:textSize="19sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/cateringBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/catering" />

        <ImageView
            android:id="@+id/decoBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/decoration" />

        <ImageView
            android:id="@+id/equipBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/equipments" />

        <ImageView
            android:id="@+id/promoBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/promoters" />

        <ImageView
            android:id="@+id/entertainBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/entertain" />


        <ImageView
            android:id="@+id/eventsBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/events" />

        <ImageView
            android:id="@+id/otherBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/services" />

        <ImageView
            android:id="@+id/itemsBtn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:src="@drawable/items" />

    </LinearLayout>


</ScrollView>