<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KenyaFoundActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="80dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/events_logo"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOST AND FOUND ITEMS "
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/btnViewAllFoundKe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#3D5AFE"
            android:text="View All EVENTS"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/btnAddInfoFoundKe"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="#3D5AFE"
            android:text="Add New EVENT" />


    </LinearLayout>



</LinearLayout>